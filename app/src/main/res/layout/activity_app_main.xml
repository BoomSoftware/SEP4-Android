<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_100"
    tools:context=".views.login.SignInFragment">

    <TextView
        android:id="@+id/text_sign_up_view"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:background="@drawable/plant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_main_add_garden"
        style="@style/green_button"
        android:layout_width="163dp"
        android:layout_height="54dp"
        android:layout_marginTop="48dp"
        android:text="@string/add_garden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_sign_up_view" />

    <Button
        android:id="@+id/button_main_view_garden"
        style="@style/green_button"
        android:layout_width="163dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:text="@string/view_garden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_main_add_garden" />

    <Button
        android:id="@+id/button_main_settings"
        style="@style/green_button"
        android:layout_width="163dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:text="@string/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_main_view_garden" />

</androidx.constraintlayout.widget.ConstraintLayout>